[flake8]
exclude =
    # don't traverse git directory
    .git,
    # don't traverse cached files
    __pycache__,
    # don't traverse venv files
    bin,
    lib,
    share,
    local,
    # don't traverse autogenerated scripts
    migrations
max-line-length = 130

# Specify of a list of codes to ignore.
ignore =
    E203, F632, E711, E501, E722, E741, W503, F541
